<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/main_color">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_48"
                        android:paddingRight="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_16">

                        <LinearLayout
                            android:id="@+id/ll_userInfo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_80"
                                android:src="@mipmap/ic_user_placeholder" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_80"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_shopName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/立即登录"
                                    android:textSize="@dimen/font_size_16"
                                    android:textColor="@color/main_color_sconde" />

                                <TextView
                                    android:id="@+id/tv_shopPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/登录享受更多特权"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:textSize="@dimen/font_size_12"
                                    android:textColor="@color/color_666666" />
                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/cv_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_80"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/rl_yuyue"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/white"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:padding="@dimen/dp_8"
                                android:src="@mipmap/icon_yuyue" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/预约车位"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_arrow" />


                        </LinearLayout>






                        <LinearLayout
                            android:id="@+id/rl_stopcarNote"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:background="@color/white"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:padding="@dimen/dp_8"
                                android:src="@mipmap/icon_order" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/停车记录"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_arrow" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/rl_mysend"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:background="@color/white"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:padding="@dimen/dp_8"
                                android:src="@mipmap/icon_mysend" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/我的发布"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_arrow" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rl_goodNote"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:visibility="gone"
                            android:background="@color/white"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_goodsnote" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/商品统计"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_arrow" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_helper"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:visibility="visible"
                            android:background="@color/white"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:padding="@dimen/dp_8"
                                android:src="@mipmap/icon_helper" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/帮助中心"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_arrow" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_setting"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:visibility="visible"
                            android:background="@color/white"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:padding="@dimen/dp_8"
                                android:src="@mipmap/icon_setting" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/设置"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_arrow" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_loginOut"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_24"
                            android:background="@drawable/btn_shape_themecolor"
                            android:gravity="center"
                            android:text="退出登录"
                            android:visibility="visible"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_12">

                    <LinearLayout
                        android:id="@+id/rl_payout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_payout" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_50"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/支出记录"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/font_size_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_arrow" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>






                <LinearLayout
                    android:id="@+id/ll_opt"
                    android:elevation="@dimen/dp_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    android:layout_weight="1"
                    android:layout_marginTop="208dp"
                    android:background="@color/white"
                    android:paddingVertical="@dimen/dp_12"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mypackage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="@dimen/dp_50"
                            android:gravity="center"
                            android:padding="@dimen/dp_8"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold"
                            android:src="@mipmap/icon_package"
                            tools:text="100" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="我的钱包"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mycar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="@dimen/dp_50"
                            android:gravity="center"
                            android:padding="@dimen/dp_8"
                            android:src="@mipmap/icon_mycar"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold"
                            tools:text="100" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/我的车辆"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="@dimen/dp_50"
                            android:gravity="center"
                            android:padding="@dimen/dp_8"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold"
                            android:src="@mipmap/icon_order"
                            tools:text="100" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/我的订单"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>



                </LinearLayout>

            </RelativeLayout>



        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>